<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vakoze.blomidtech.vakoze.fragments.NotificationsFragment">

    <!-- TODO: Update blank fragment layout -->


    <Button
        android:id="@+id/btnConnectNotifications"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Se connecter" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="@string/no_notifications_pending"
        android:textStyle="bold" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/deleteAllNotifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="15dp"
        android:clickable="true"
        android:src="@drawable/ic_delete_all_notifs" />


</FrameLayout>
